<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/Bottom_App">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="1"
        android:visibility="visible"
        android:layout_height="20dp"
        android:id="@+id/timer_progress" />


    <TableLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="0.25"
        android:layout_columnWeight="0.25"
        android:layout_margin="30dp"
        android:gravity="center"
        android:background="@android:color/transparent">
        <TableRow
            android:gravity="center">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle1"
                android:layout_margin="8dp"
                android:id="@+id/imageButton00"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle2"
                android:id="@+id/imageButton01"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true" />
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle3"
                android:id="@+id/imageButton02"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true" />
        </TableRow>

        <TableRow
            android:gravity="center">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/circle4"
                android:id="@+id/imageButton10"
                android:background="@android:color/transparent"
                android:layout_alignLeft="@+id/imageButton00"
                android:layout_alignStart="@+id/imageButton00"
                android:layout_alignParentBottom="true"/>


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle5"
                android:id="@+id/imageButton11"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:layout_alignTop="@+id/imageButton10"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_toRightOf="@+id/imageView5" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle1"
                android:layout_margin="8dp"
                android:id="@+id/imageButton12"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false" />

        </TableRow>

        <TableRow
            android:gravity="center">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/circle2"
                android:id="@+id/imageButton20"
                android:background="@android:color/transparent"
                android:layout_alignLeft="@+id/imageButton00"
                android:layout_alignStart="@+id/imageButton00"
                android:layout_alignParentBottom="true"/>


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle3"
                android:id="@+id/imageButton21"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:layout_alignTop="@+id/imageButton10"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_toRightOf="@+id/imageView5" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle4"
                android:layout_margin="8dp"
                android:id="@+id/imageButton22"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false" />

        </TableRow>

        <TableRow
            android:gravity="center">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/circle5"
                android:id="@+id/imageButton30"
                android:background="@android:color/transparent"
                android:layout_alignLeft="@+id/imageButton00"
                android:layout_alignStart="@+id/imageButton00"
                android:layout_alignParentBottom="true"/>


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle1"
                android:id="@+id/imageButton31"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:layout_alignTop="@+id/imageButton10"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_toRightOf="@+id/imageView5" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle2"
                android:layout_margin="8dp"
                android:id="@+id/imageButton32"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false" />

        </TableRow>

        <TableRow
            android:gravity="center">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:src="@drawable/circle3"
                android:id="@+id/imageButton40"
                android:background="@android:color/transparent"
                android:layout_alignLeft="@+id/imageButton00"
                android:layout_alignStart="@+id/imageButton00"
                android:layout_alignParentBottom="true"/>


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle4"
                android:id="@+id/imageButton41"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:layout_alignTop="@+id/imageButton10"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/imageButton01"
                android:layout_toRightOf="@+id/imageView5" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle5"
                android:layout_margin="8dp"
                android:id="@+id/imageButton42"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false" />

        </TableRow>

    </TableLayout>


</LinearLayout>