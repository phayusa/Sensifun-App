<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bottom_App"
    android:layout_below="@+id/writer_simon"
    android:id="@+id/frameLayout">

<FrameLayout
    android:background="@android:color/transparent"
    android:layout_margin="30dp"
    android:layout_width="wrap_content"
    android:layout_weight="0.8"
    android:layout_height="320dp"
    android:layout_gravity="center">
    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/circle1"
        android:id="@+id/imageButton00"
        android:background="@android:color/transparent"
        android:layout_gravity="left|top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />


    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/circle2"
        android:id="@+id/imageButton01"
        android:layout_gravity="right|top"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/circle4"
        android:id="@+id/imageButton10"
        android:layout_gravity="left|bottom"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/imageButton00"
        android:layout_alignStart="@+id/imageButton00"
        android:layout_alignParentBottom="true"/>


    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/circle5"
        android:id="@+id/imageButton11"
        android:layout_gravity="right|bottom"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageButton10"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton01"
        android:layout_toRightOf="@+id/imageView5" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:background="@drawable/full_circle"
        android:src="@drawable/circle_white"
        android:layout_below="@+id/imageButton00"
        android:layout_centerInParent="true"/>

    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:id="@+id/line3"
            android:src="@drawable/line"
            android:layout_marginRight="30dp"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:id="@+id/line4"
            android:rotation="90"
            android:src="@drawable/line"
            android:layout_gravity="right|top" />

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:id="@+id/line2"
            android:rotation="90"
            android:src="@drawable/line"
            android:layout_gravity="left|bottom" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:id="@+id/line"
            android:layout_marginLeft="30dp"
            android:src="@drawable/line"
            android:layout_gravity="left|top" />

        <ImageButton
            android:scaleX="0.28"
            android:scaleY="0.28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lauch_sequence"
            android:src="@drawable/play_button"
            android:onClick="launch_first"
            android:background="@android:color/transparent"
            android:layout_above="@+id/frameLayout"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>
</LinearLayout>