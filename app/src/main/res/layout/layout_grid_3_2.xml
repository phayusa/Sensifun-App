<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:columnCount="@integer/sizey_carpet"
    android:rowCount="@integer/sizex_carpet"
    android:orientation="horizontal"
    android:id="@+id/gridLayout"
    android:layout_marginBottom="@dimen/size_button"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_weight="0.3333">
    <ImageButton
        android:id="@+id/imageButton00"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_weight="0.5"
        android:layout_columnWeight="0.3333"
        android:layout_rowWeight="0.1"
        android:clickable="true"
        android:src="@color/inactive_color"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/imageButton01"
        android:layout_row="0"

        android:layout_weight="0.5"
        android:layout_column="1"
        android:src="@color/inactive_color"
        android:layout_columnWeight="0.3333"
        android:layout_rowWeight="0.1"
        android:clickable="true"
        android:layout_height="match_parent" />
    </TableRow>

    <TableRow
        android:layout_weight="0.3333"
        android:layout_height="fill_parent">
    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_weight="0.5"
        android:src="@color/inactive_color"
        android:layout_columnWeight="0.3333"
        android:layout_rowWeight="0.1"
        android:clickable="true"
        android:layout_height="fill_parent" />
    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_weight="0.5"
        android:src="@color/inactive_color"
        android:layout_columnWeight="0.3333"
        android:layout_rowWeight="0.1"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    </TableRow>

    <TableRow
        android:layout_weight="0.3333">

    <ImageButton
        android:id="@+id/imageButton20"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@color/inactive_color"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:layout_columnWeight="0.3333"
        android:layout_rowWeight="0.1"
        android:clickable="true" />
    <ImageButton
        android:id="@+id/imageButton21"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_height="match_parent"
        android:src="@color/inactive_color"
        android:layout_columnWeight="0.3333"
        android:layout_weight="0.5"
        android:layout_rowWeight="0.1"
        android:clickable="true" />

    </TableRow>
</TableLayout>