<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bottom_App"
    android:layout_below="@+id/writer_simon"
    android:id="@+id/Relative_Reaction">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="left|center"
                android:text="Countdown"
                android:textColor="@android:color/white"/>
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center_vertical|right"
                android:textSize="30dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:text="20"
                android:id="@+id/Time_item" />
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="left|center"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="s" />
        </LinearLayout>
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/straight_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="left|center"
                android:text="Your score"
                android:textColor="@android:color/white"/>
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center_vertical|right"
                android:textSize="30dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:text="9"
                android:id="@+id/Score_item" />
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="t/s" />
        </LinearLayout>
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/straight_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:layout_weight="1.5"
                android:text="Your record"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1.8"
                android:id="@+id/Record_item"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|right"
                android:text="15" />
            <TextView
                android:textColor="@android:color/white"
                android:gravity="center_vertical|right"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text="t/s" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/straight_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="PLAY AGAIN"
            android:layout_margin="10dp"
            android:id="@+id/button_play_again"
            android:background="@drawable/button_menu_green"
            android:textColor="@android:color/white"
            android:onClick="Activity_Score_On_Click"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="150dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="Back to Menu"
            android:background="@drawable/button_menu_grey"
            android:layout_margin="10dp"
            android:id="@+id/button_back_menu"
            android:onClick="Activity_Score_On_Click"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</RelativeLayout>