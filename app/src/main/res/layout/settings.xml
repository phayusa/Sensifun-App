<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bottom_App">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:text="Countdown"
                    android:id="@+id/Countdown_Settings"
                    android:layout_weight="0.4"
                    android:textColor="@android:color/white"
                    android:singleLine="false" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#3f4a4f" />

            </LinearLayout>
                <EditText
                    android:inputType="number"
                    android:ems="10"
                    android:textColor="@android:color/white"
                    android:layout_width="fill_parent"
                    android:id="@+id/Entry_Time"
                    android:layout_height="match_parent"/>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:text="Tile number"
            android:textSize="15dp"
            android:id="@+id/Tile_Number_Settings"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:buttonTint="@android:color/white"
        android:id="@+id/radioGroup"
        android:theme="@style/AppTheme"
        android:gravity="left|center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x2"
            android:typeface="sans"
            android:paddingLeft="30dp"
            android:layout_margin="5dp"
            android:buttonTint="@android:color/white"
            android:id="@+id/size22"
            android:textColor="@android:color/white"
            android:checked="false"
            android:onClick="on_click" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3x2"
            android:layout_margin="5dp"
            android:typeface="sans"
            android:paddingLeft="30dp"
            android:buttonTint="@android:color/white"
            android:id="@+id/size32"
            android:textColor="@android:color/white"
            android:checked="false"
            android:onClick="on_click"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="3x3"
            android:layout_margin="5dp"
            android:typeface="sans"
            android:id="@+id/size33"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:onClick="on_click"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5x3"
            android:paddingLeft="30dp"
            android:id="@+id/size53"
            android:typeface="sans"
            android:layout_margin="5dp"
            android:buttonTint="@android:color/white"
            android:textColor="@android:color/white"
            android:checked="false"
            android:onClick="on_click" />

    </RadioGroup>



    </LinearLayout>

    <Button
        android:layout_width="@dimen/width_button_menu"
        android:layout_height="wrap_content"
        android:text="Validate"
        android:onClick="on_click"
        android:id="@+id/validate_button_settings"
        android:background="@drawable/button_menu_green"
        android:layout_gravity="center_horizontal" />
</LinearLayout>